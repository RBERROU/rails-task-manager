<!-- app/views/tasks/new.html.erb -->
<h1>New Task</h1>

<%= form_with model: @task do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :details %>
    <%= form.text_area :details %>
  </div>

  <div class="field">
    <%= form.label :completed %>
    <%= form.check_box :completed %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Task' %>
  </div>
<% end %>

<%= link_to 'Back to tasks', tasks_path %>
